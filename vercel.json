{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    // API routes
    {
      "src": "/api/compare-zips",
      "methods": ["POST", "OPTIONS"],
      "dest": "api/index.py"
    },
    {
      "src": "/api/health",
      "methods": ["GET", "OPTIONS"],
      "dest": "api/index.py"
    },
    {
      "src": "/api/(.*)",
      "dest": "api/index.py"
    },

    // Static assets (from React/Vue build)
    {
      "src": "/static/(.*)",
      "dest": "frontend/dist/static/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "frontend/dist/favicon.ico"
    },
    {
      "src": "/manifest.json",
      "dest": "frontend/dist/manifest.json"
    },
    {
      "src": "/asset-manifest.json",
      "dest": "frontend/dist/asset-manifest.json"
    },
    {
      "src": "/robots.txt",
      "dest": "frontend/dist/robots.txt"
    },

    // SPA catch-all (all other routes)
    {
      "src": "/(.*)",
      "dest": "frontend/dist/index.html"
    }
  ]
}
